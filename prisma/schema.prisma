generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Camera{
  id            String @id @default(uuid())
  name          String
  incidents     Incident[]
}

model Incident{
  id            String @id @default(uuid())
  videoUrl      String
  thumbnailUrl  String?
  type          String?

  cameraId      String
  cameraName    String
  location      String

  tsStart       DateTime
  tsEnd         DateTime
  resolved      Boolean

  camera        Camera @relation(fields: [cameraId], references: [id])
}
